{
    "name": "ST-MQ",
    "description": "SmartThings MQTT Tools",
    "version": "0.1.0",
    "slug": "st-mq",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "services",
    "boot": "auto",
    "init": "false",
    "ports": {
        "1234/tcp": 1234
    },
    "map": ["share:rw"],
    "options": {
        "easee": {
            "access_token": "",
            "refresh_token": "",
            "charger_id": "",
            "equalizer_id": ""
        },
        "entsoe": {
            "token": ""
        },
        "geoloc": {
            "country_code": "fi",
            "postal_code": "06150"
        },
        "mqtt": {
            "address": "mqtt://core-mosquitto",
            "user": "",
            "pw": ""
        },
        "openweathermap": {
            "token": ""
        },
        "smartthings": {
            "dev_id": "",
            "token": ""
        },
        "temp_to_hours": [
            { "temp": 30, "hours": 1 },
            { "temp": 20, "hours": 2 },
            { "temp": 10, "hours": 10 },
            { "temp": 0, "hours": 14 },
            { "temp": -10, "hours": 18 },
            { "temp": -20, "hours": 22 },
            { "temp": -30, "hours": 24 }
        ]
    },
    "schema": {
        "easee": {
            "access_token": "password?",
            "refresh_token": "password?"
        },
        "entsoe": {
            "token": "password?"
        },
        "geoloc": {
            "country_code": "str",
            "postal_code": "str"
        },
        "mqtt": {
            "address": "str",
            "user": "str",
            "pw": "password"
        },
        "openweathermap": {
            "token": "str?"
        },
        "smartthings": {
            "dev_id": "str?",
            "token": "password?"
        },
        "temp_to_hours": [
            {
                "temp": "int",
                "hours": "int"
            }
        ]
    }
}